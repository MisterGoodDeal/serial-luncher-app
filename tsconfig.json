{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./src" /* Get baseUrl for the alias */,
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@navigation/*": ["navigation/*"],
      "@fonts/*": ["assets/fonts/*"],
      "@images/*": ["assets/images/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@api/*": ["api/*"],
      "@contexts/*": ["contexts/*"],
      "@themes/*": ["themes/*"],
      "@environments/*": ["environments/*"]
    }
  }
}
